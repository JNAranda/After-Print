<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets'%>
  <%= render "layouts/javascript" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
 	<%= render 'layouts/header' %>
      <section class="round">
	<section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
        <%= yield %>
  
      </section>
	
	<%= render 'layouts/footer' %>
	  

	</div>
	<%= debug(params) if Rails.env.development? %>
</body>
</html>
